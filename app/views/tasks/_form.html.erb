<%= form_for(task) do |f| %>


<!--エラーメッセージ-->

<% if task.errors.any? %>
  <div id="error_explanation">
    <ul>
      
<% task.errors.full_messages.each do |task| %>

<li><%= task %></li>
<% end %>

    </ul>
  </div>
  
<% end %>

<!--エラーメッセージここまで-->


<%= f.label :status, 'ステータス' %>
<%= f.text_field :status %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>

<%= f.submit '投稿' %>

<% end %>